<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_bluetooth">

    <fragment
        android:id="@+id/navigation_leds"
        android:name="br.com.daciosoftware.ardubluetooth.ui.leds.LedsFragment"
        android:label="@string/title_leds"
        tools:layout="@layout/fragment_leds" />

    <fragment
        android:id="@+id/navigation_power"
        android:name="br.com.daciosoftware.ardubluetooth.ui.power.PowerFragment"
        android:label="@string/title_power"
        tools:layout="@layout/fragment_power" />

    <fragment
        android:id="@+id/navigation_bluetooth"
        android:name="br.com.daciosoftware.ardubluetooth.ui.bluetooth.BluetoothFragment"
        android:label="@string/title_bluetooth"
        tools:layout="@layout/fragment_bluetooth" />

    <fragment
        android:id="@+id/navigation_servo"
        android:name="br.com.daciosoftware.ardubluetooth.ui.servo.ServoFragment"
        android:label="@string/title_servo"
        tools:layout="@layout/fragment_servo" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="br.com.daciosoftware.ardubluetooth.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>